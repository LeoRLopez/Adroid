@model IEnumerable<ConsultorioWeb.Models.Especialidad>

@{
    ViewBag.Title = "Listado de Especialidades";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Especialidades</h2>

<p>
    @Html.ActionLink("Crear Nueva Especialidad", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioPorDefecto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BajaLogica)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrecioPorDefecto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BajaLogica)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.EspecialidadId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.EspecialidadId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.EspecialidadId })
        </td>
    </tr>
}

</table>
