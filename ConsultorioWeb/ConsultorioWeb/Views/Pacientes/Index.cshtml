@model IEnumerable<ConsultorioWeb.Models.Paciente>

@{
    ViewBag.Title = "Listado de Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Pacientes</h2>

<p>
    @Html.ActionLink("Crear Nuevo Paciente", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Nro Documento
        </th>
        <th>
            Nacimiento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            Teléfono
        </th>
        <th>
            Dirección
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrupoSanguineo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Donante)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Transplantado)
        </th>
        <th>
            Forma de Pago
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroDocumento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TelCelular)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GrupoSanguineo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Donante)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Transplantado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FormaDePago.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdPaciente }) 
            @Html.ActionLink("Detalles", "Details", new { id=item.IdPaciente }) 
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdPaciente })
        </td>
    </tr>
}
</table>