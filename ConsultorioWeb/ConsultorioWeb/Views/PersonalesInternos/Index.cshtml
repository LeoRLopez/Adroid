@model IEnumerable<ConsultorioWeb.Models.PersonalInterno>

@{
    ViewBag.Title = "Listado de Medicos y Personales Internos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Medicos y Personales Internos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Personal Interno", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            Nro Documento
        </th>
        <th>
            Nacimiento
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            Estado Civil
        </th>
        <th>
            Teléfono
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            Dirección
        </th>
        <th>
            Matrícula
        </th>
        <th>
            Activo?
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoCivil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelCel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.MatriculaMedico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdPersonal }) 
                @Html.ActionLink("Detalles", "Details", new { id = item.IdPersonal }) 
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdPersonal })
            </td>
        </tr>
    }
</table>